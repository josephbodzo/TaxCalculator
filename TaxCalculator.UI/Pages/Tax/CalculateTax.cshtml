@page
@model CalculateTaxModel
@{
    ViewData["Title"] = "Tax Calculator";
}

<h1>Tax Calculator</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaxCalculation.PostalCode" class="control-label"></label>
                <input asp-for="TaxCalculation.PostalCode" class="form-control" />
                <span asp-validation-for="TaxCalculation.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxCalculation.AnnualIncome" class="control-label"></label>
                <input asp-for="TaxCalculation.AnnualIncome" class="form-control" />
                <span asp-validation-for="TaxCalculation.AnnualIncome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-success" />
            </div>
        </form>

    </div>

    <div class="col-md-8" style="@(!string.IsNullOrWhiteSpace(Model.TaxCalculation?.TaxYear)  ? "display:block" : "display:none")">
        <div>
            <h5>Results</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TaxCalculation.TaxAmount)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TaxCalculation.TaxAmount)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TaxCalculation.TaxYear)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TaxCalculation.TaxYear)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TaxCalculation.CalculationType)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TaxCalculation.CalculationType)
                </dd>
            </dl>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
